<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SwapiDev.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SwapiDev"
    Shell.FlyoutBehavior="Disabled"
    Title="SwapiDev">


    <TabBar>
          <Tab Title="Home">
      <ShellContent
          Title="Home"
          ContentTemplate="{DataTemplate local:MainPage}"
          Route="MainPage" />
  </Tab>
        <Tab Title="Pianeti">
            <ShellContent
                Title="Planets"
                ContentTemplate="{DataTemplate local:PlanetsPage}"
                Route="PlanetsPage" />
        </Tab>
        <Tab Title="Personaggi">
            <ShellContent
                Title="People"
                ContentTemplate="{DataTemplate local:PeoplesPage}"
                Route="PeoplesPage" />
        </Tab>
    </TabBar>

</Shell>
